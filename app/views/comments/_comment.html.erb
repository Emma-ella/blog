
  <% if comment.persisted? %>
    <p>
      <strong>Content:</strong>
      <%= comment. content %>
    </p>         

    <p>
      <strong>Comment_at:</strong>
      <%= comment.date %>
    </p>


    <p>
        <%= link_to "Destroy Comment", [comment.post.bblog, comment.post, comment], data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    } %>
    </p>

    <%= @comment.likes.count%> like
    <% if comment.likes.exists?(user_id: current_user.id) %>
      <%= button_to 'Unlike', bblog_post_comment_like_path(@bblog, @post, comment, comment.likes.first), method: :delete %>
    <%else%>
      <%= button_to 'Like', bblog_post_comment_likes_path(@bblog, @post, comment), method: :post %>
    <%end%>
    <br/>

  <%end%>

  
