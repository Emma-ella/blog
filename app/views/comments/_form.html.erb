<%= form_with model: [ @post, @post.comments.build ] do |form| %>
    <div>
      <%= form.label :content, style: "display: block" %>
      <%= form.text_area :content %>
    </div>
    <div>
      <%= form.label :date, style: "display: block" %>
      <%= form.datetime_field :date %>
    </div>
    </br>
    <p>
      <%= form.submit %>
    </p>
  <% end %>