<h1>New Blog</h1>

<%= form_with model: @bblog do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>

    <% @bblog.errors.full_messages_for(:title).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>

  </div>

  </br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
